# Script version is yymmdd-HHMMSS in UTC, date +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150628-042403

NUMCHARACTERS=12

ZFSLIST=`zpool status | egrep -o "pool\: ([[:alnum:]-]*)" | awk '{ print $NF }'`
for a in ${ZFSLIST} ; do
    echo -n "$a"
    if [ ${#a} -lt $NUMCHARACTERS ]; then
        tab=""
        for i in `seq ${#a} $NUMCHARACTERS`; do
            tab="$tab "
        done
    fi
    echo -n "${tab}"

    line=`zfs list -H -o used $a 2>/dev/null`
    echo -n "$line"
    if [ ${#line} -lt 7 ]; then
        tab=""
        for i in `seq ${#line} 7`; do
            tab="$tab "
        done
    fi
    echo -n "${tab}"

    line=`zfs list -H -o available $a 2>/dev/null`
    echo -n "$line"
    if [ ${#line} -lt 7 ]; then
        tab=""
        for i in `seq ${#line} 7`; do
            tab="$tab "
        done
    fi
    echo -n "${tab}"

    zpool status ${a} | egrep '(state:|status:|action:|scan:|to go|% done|errors:)' \
    | sed -E 's/ *(Mon|Tue|Wed|Thu|Fri|Sat|Sun) */ /g' \
    | sed -e 's/ *with 0 errors on */ /g' \
          -e 's/ *scan:  *resilvered  *[0-9][0-9]*[A-Z] in */done /g' \
          -e 's/ *scan:  *scrub  *repaired 0 in */done /g' \
          -e 's/ *state:  *ONLINE *//g' \
          -e 's/ *errors:  *No  *known  *data  *errors *//g' \
          -e 's/\.  *pool  *will */./g' \
          -e 's/scan: *scrub/~  &/g' \
          -e 's/status:/~&/g' \
    | grep -v '^ *$' | tr '~' '\n'
done
