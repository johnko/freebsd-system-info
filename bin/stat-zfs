# Script version is YYmmdd-HHMM in UTC, date +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=141214-040839

ZFSLIST=`zpool status | egrep -o "pool\: ([[:alnum:]-]*)" | awk '{ print $NF }'`
for a in ${ZFSLIST} ; do
	if [ ${#a} -lt 10 ]; then
		tab=""
		for i in `seq ${#a} 15`; do
			tab="$tab "
		done
	fi
	echo -n "$a${tab}"
	echo -n $( zfs list -H -o used,available $a 2>/dev/null )
	echo -n "  "
	zpool status ${a} | egrep '(state\:|scan\:|errors\:|status\:|to go|% done)' | \
		tr '\n' '`' | sed \
			-e 's/ *pool\: / /g' \
			-e 's/`/ /g' \
			-e 's/   */  /g' \
			-e 's/^ *//g' \
			-e 's/errors: No known data errors//' \
			-e 's/ with 0 errors//' \
			-e 's/ scrub repaired 0 in/ done in/' \
			-e 's/scrub in progress since/started/' \
			-e 's/state: ONLINE *//' \
			-e 's/scan: none requested//' \
			-e 's/ 0 repaired,//' \
			-e 's/  / /' \
			-e 's/[^ ]* scanned/\
.                       &/' \
                    -e 's/[^ ]* scan:/\
.                      &/'
done
