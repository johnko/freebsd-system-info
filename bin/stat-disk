# Script version is YYmmdd-HHMM in UTC, date +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=141214-050104

case `uname -s` in
	"Darwin")
		df -H / | \
			grep '/' | \
			awk '{ print $2,$3,$4 }'
	;;
	"FreeBSD")
		if ! mount | grep ' / ' | grep '/md' >/dev/null 2>&1 ; then
			ZPOOLSTAT=$( zpool get -H size,allocated,free \
				$( \
					df -H / | \
						grep '/' | \
						grep -v tmpfs | \
						awk -F'/' '{print $1}' \
				) | \
				awk '{ printf "%s ", $3 }' | \
				sed 's# $##'
			)
		fi
		if [ "x" = "x${ZPOOLSTAT}" ]; then
			df -H / | \
				grep '/' | \
				awk '{ print $2,$3,$4 }'
		else
			echo "$ZPOOLSTAT"
		fi
	;;
esac
